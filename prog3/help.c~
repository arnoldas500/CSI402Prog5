#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include "structs.h"

void * checkedMalloc(size_t s){
    void * p = malloc(s);
    if(p == NULL){
        printf(stderr, "Error mallocing!\n");
        exit(1);
    }else
        return p;
}

FILE * checkedOpen(char * name, char * mode){
    FILE *file=fopen(name,mode);
    if(file==NULL){
        printf("failed to open input file");
        fprintf(stderr, "Could not open file: %s\n", name); exit(1);
    }else
        return file;
}

//debug tool
void checkpoint(){
    printf("%s\t%d\n",__FILE__,__LINE__);
    fflush(stdout);
}
